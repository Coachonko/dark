{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "ES6",
      "ES7",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "@dark-engine/core",
    "baseUrl": ".",
    "paths": {
      "@nativescript/core": [
        "../../packages/platform-native/node_modules/@nativescript/core/index"
      ],
      "@dark-engine/core": [
        "../../packages/core/src/index"
      ],
      "@dark-engine/core/*": [
        "../../packages/core/src/*"
      ],
      "@dark-engine/platform-native": [
        "../../packages/platform-native/src/index"
      ],
      "@dark-engine/native-navigation": [
        "../../packages/native-navigation/src/index"
      ],
      "@dark-engine/animations": [
        "../../packages/animations/src/index"
      ],
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
