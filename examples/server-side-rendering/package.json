{
  "name": "dark-universal-app",
  "scripts": {
    "start": "npm run backend",
    "backend": "nodemon -e js,ts,tsx --ignore frontend/static/ --ignore node_modules/ --exec ts-node -- ./backend/app.ts",
    "frontend": "cd frontend && cross-env NODE_ENV=production npx webpack",
    "frontend:watch": "cd frontend && cross-env NODE_ENV=development npx webpack --watch"
  },
  "devDependencies": {
    "ts-loader": "9.4.2",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.17",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cross-env": "7.0.3",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "5.3.3"
  },
  "_moduleAliases": {
    "@dark-engine/core": "../../packages/core/src/index",
    "@dark-engine/platform-browser": "../../packages/platform-browser/src/index",
    "@dark-engine/platform-server": "../../packages/platform-server/src/index",
    "@dark-engine/web-router": "../../packages/web-router/src/index",
    "@dark-engine/animations": "../../packages/animations/src/index",
    "@dark-engine/styled": "../../packages/styled/src/index"
  }
}
