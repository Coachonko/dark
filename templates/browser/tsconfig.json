{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@dark-engine/core": [
        "../../packages/core/src/index"
      ],
      "@dark-engine/platform-browser": [
        "../../packages/platform-browser/src/index"
      ],
      "@dark-engine/styled": [
        "../../packages/styled/src/index"
      ]
    }
  },
  "include": [
    "./src/*"
  ]
}
