{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES6",
      "ES7",
      "dom"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "qproperty-alignment"
          ]
        }
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}