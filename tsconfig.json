{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@dark/core": [
        "./packages/core/src/index"
      ],
      "@dark/core/*": [
        "./packages/core/src/*"
      ],
      "@dark/platform-browser": [
        "./packages/platform-browser/src/index"
      ],
      "@dark/platform-browser/*": [
        "./packages/platform-browser/src/*"
      ],
      "@test-utils": [
        "./test/utils"
      ]
    }
  },
  "include": [
    "./packages/**/*",
    "./examples/**/*",
    "./test/**/*",
    "./*.js"
  ]
}