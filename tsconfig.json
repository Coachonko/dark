{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@dark-engine/core": [
        "./packages/core/src/index"
      ],
      "@dark-engine/core/*": [
        "./packages/core/src/*"
      ],
      "@dark-engine/platform-browser": [
        "./packages/platform-browser/src/index"
      ],
      "@dark-engine/platform-browser/*": [
        "./packages/platform-browser/src/*"
      ],
      "@test-utils": [
        "./test/utils"
      ]
    }
  },
  "include": [
    "./packages/**/*",
    "./examples/**/*",
    "./test/**/*",
    "./*.js"
  ]
}